        <!-- Description -->

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_medium"
            android:maxLines="4"
            android:textColor="@color/sub_text"
            android:textSize="@dimen/_11ssp" />
       <!-- android:text="@string/textw"
-->

        <TextView
            android:id="@+id/tvReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/read_more"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/colorPrimary" />

        <!-- Institution Name and Icon -->


        <ImageView
            android:id="@+id/imgPost"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_margin="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:fitsSystemWindows="true"
            android:src="@drawable/no_data_found"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:visibility="gone"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="@dimen/_6sdp">

            <!-- Likes Section (Left-aligned) -->
            <LinearLayout
                android:id="@+id/likes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:src="@drawable/like_count" />

                <TextView
                    android:id="@+id/tvLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="12"
                    android:textColor="@color/sub_text"
                    android:textSize="@dimen/_11ssp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <!-- Comment Section (Right-aligned) -->
            <LinearLayout
                android:id="@+id/comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvCommentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="0"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/sub_text"
                    android:textSize="@dimen/_11ssp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvCom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/sub_text"
                    android:textSize="@dimen/_11ssp"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginVertical="5dp"
            android:background="@color/langgraycolor" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"

            >


            <LinearLayout
                android:id="@+id/llLike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/like"/>


            <TextView
                android:id="@+id/tvLikeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="Like"
                android:textColor="@color/sub_text"
                android:textSize="@dimen/_11ssp"/>
        </LinearLayout>



        <LinearLayout
                android:id="@+id/llComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment"/>

                <TextView
                    android:id="@+id/tvComm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Comment"
                    android:textColor="@color/sub_text"
                    android:textSize="@dimen/_11ssp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRepost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/repost"/>

                <TextView
                    android:id="@+id/tvrePost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Repost"
                    android:textColor="@color/sub_text"
                    android:textSize="@dimen/_11ssp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/send"/>

                <TextView
                    android:id="@+id/tvsend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="Send"
                    android:textColor="@color/sub_text"
                    android:textSize="@dimen/_11ssp"/>

            </LinearLayout>




        </LinearLayout>

       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginVertical="5dp"
            android:background="@color/langgraycolor" />-->


    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
