<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_round_bg">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="#79838282" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="Select Language"
                    android:textColor="@color/heading_text"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/montserrat_bold"/>

                <!-- Language Options -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llEnglish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_box"
                    android:layout_marginHorizontal="@dimen/_12ssp"
                    android:layout_marginVertical="@dimen/_8ssp"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbEnglish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/montserrat_bold"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- Hindi -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llHindi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_box"
                    android:layout_marginHorizontal="@dimen/_12ssp"
                    android:layout_marginVertical="@dimen/_5ssp"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbHindi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="हिंदी"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/montserrat_bold"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- Marathi -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llMarathi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_box"
                    android:layout_marginHorizontal="@dimen/_12ssp"
                    android:layout_marginVertical="@dimen/_8ssp"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <CheckBox
                        android:id="@+id/cbMarathi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="मराठी"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/montserrat_bold"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- Submit Button -->
                <!-- <Button
                     android:id="@+id/btnSubmit"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="@dimen/_12sdp"
                     android:layout_marginHorizontal="@dimen/_20sdp"
                     android:background="@drawable/bt_round_shape"
                     android:text=" Continue "
                     android:textSize="@dimen/_15sdp"
                     android:textStyle="bold" />-->
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:background="@drawable/bt_round_shape"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

